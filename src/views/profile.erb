<!DOCTYPE html>
<html>
<head>
  <title>codeQuest</title>
  <link rel="stylesheet" type="text/css" href="<%=url('profile.css')%>">
  <link rel="icon" type="image/png" href="/favicon2.png">
</head>
<% if @theme == 'light' %>
  <style>@import url('color-scheme-light.css');</style>
<% else %>
  <style>@import url('color-scheme-dark.css');</style>
<% end %>
<body>
  <header class="container">
    <a href='/home'>
      <h1 class="logo">
        <img src="favicon2.png" alt="Logo">
        <span>codeQuest</span>
      </h1>
    </a>
    <nav class="nav-links">
      <ul>
        <li><a href="/home" class="nav-link">Inicio</a></li>
        <li><a href="/profile" class="current-page">Perfil</a></li>
        <%# <li><a href="/snippets" class="nav-link">Snippets</a></li> %>
        <li><form action="/logout" method="post"><button type="submit" class="nav-link no-style-button">Salir</button></form></li>
      </ul>
    </nav>
  </header>

  <main>
    <div class="profile-section">
      <h2 class="section-title">Cambiar nickname</h2>
      <div class="section-line"></div>
      <div class="button-form-container">
        <button class="change-button" id="changeButton" onclick="toggleForm('usernameForm')">Cambiar nickname</button>
        <form class="text-form" id="usernameForm" style="display: none;", method="post">
          <input type="text" id="nicknameInput" placeholder="Nuevo nickname">
          <button class="save-button" type="submit">Guardar</button>
        </form>
      </div>
    </div>

    <div class="profile-section">
      <h2 class="section-title">Cambiar email</h2>
      <div class="section-line"></div>
      <div class="button-form-container">
        <button class="change-button" id="emailChangeButton" onclick="toggleForm('emailForm')">Cambiar email</button>
        <form class="text-form" id="emailForm" style="display: none;", method="post">
          <input type="text" id="emailInput" placeholder="Nuevo email">
          <button class="save-button" type="submit">Guardar</button>
        </form>
      </div>
    </div>

    <div class="profile-section">
      <h2 class="section-title">Cambiar contraseña</h2>
      <div class="section-line"></div>
      <div class="button-form-container">
        <button class="change-button" id="passwordChangeButton" onclick="toggleForm('passwordForm')">Cambiar contraseña</button>
        <form class="text-form" id="passwordForm" style="display: none;", method="post">
          <input type="password" id="passwordInput" placeholder="Nueva contraseña">
          <button class="save-button" type="submit">Guardar</button>
        </form>
      </div>
    </div>

    <div class="profile-section">
      <h2 class="section-title">Modo oscuro</h2>
      <div class="section-line"></div>
      <div class="button-form-container">
        <% if @theme == 'light' %>
          <form action= "/profile" method="post"><button class="change-button" type="submit" id="darkModeButton"> Activar</button></form>
        <% else %>
          <form action= "/profile" method="post"><button class="change-button" type="submit" id="darkModeButton"> Desactivar</button></form>
        <% end %>
      </div>
    </div>
  </main>
  
  <script>
    function toggleForm(formId) {
      var form = document.getElementById(formId);
      if (form.style.display === 'none') {
        form.style.display = 'block';
      } else {
        form.style.display = 'none';
      }
    }
  </script>
</body>
</html>
