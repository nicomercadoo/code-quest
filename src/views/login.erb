<!DOCTYPE html>
<html>
<head>
  <title>codeQuest</title>
  <link rel="stylesheet" type="text/css" href="<%=url('logins.css')%>">
</head>
<% if @theme = 'light' %>
<style>@import url('color-scheme-light.css');</style>
<% else %>
<% end %>
<body>
  <div class="container">
    <div class="left-section">
      <h1 class="logo">codeQuest</h1>
      <p class="description">The new way of learning Haskell!</p>
    </div>
    <div class="right-section">
      <div class="content">
        <% if params[:error] %>
          <div class="error">
            <div class="floating-box">
              <span class="closeBtn" onclick="this.parentElement.style.display='none';">Ã—</span>
              <p>The account is not registered. Please create the account first.</p>
              <a href="/signup"><button>Create an Account</button></a>
            </div>
          </div>
        <% end %>
        <form class="form" action="#" method="post">
          <input type="text" name="email" placeholder="Email" required>
          <input type="password" name="password" placeholder="Password" required>
          <div class="button-wrapper">
            <button type="submit" id="primary-btn">Sign In</button>
            <a href="/signup"><button type="button" id="secondary-btn">Create an Account</button></a>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const floatingBox = document.querySelector('.floating-box');
      const errorBox = document.querySelector('.error');

      // Function to handle outside click events
      function outsideClickHandler(event) {
        if (!floatingBox.contains(event.target) && errorBox.contains(event.target)) {
          errorBox.style.display = 'none';
        }
      }

      // Add event listener to the document
      document.addEventListener('click', outsideClickHandler);
    });
  </script>
</body>
</html>
