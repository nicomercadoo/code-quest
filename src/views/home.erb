<!DOCTYPE html>
<html>
<head>
  <title>codeQuest</title>
  <link rel="stylesheet" type="text/css" href="<%=url('home.css')%>">
  <link rel="icon" type="image/png" href="/favicon2.png"> 
</head>
<% if @theme == 'light' %>
  <style>@import url('color-scheme-light.css');</style>
<% else %>
  <style>@import url('color-scheme-dark.css');</style>
<% end %>
<body>
  <header class="container">
    <a href='/home'>
      <h1 class="logo">
        <img src="favicon2.png" alt="Logo">
        <span>codeQuest</span>
      </h1>
    </a>
    <nav class="nav-links">
      <ul>
        <li><a href="/home" class="current-page">Inicio</a></li>
        <li><a href="/profile" class="nav-link">Perfil</a></li>
        <li><a href="/snippets" class="nav-link">Snippets</a></li>
        <li><form action="/logout" method="post"><button type="submit" class="nav-link no-style-button">Salir</button></form></li>
      </ul>
    </nav>
  </header>

  <div class="button-stack">

    <% @tests.each do |test| %>
    
    <% @questions = Question.where(test_letter: test.letter) %>

    <% @lessons = Lesson.where(test_letter: test.letter) %>
    <div class="button-container">
      <button class="chapter-button" onclick="toggleDropdown('introduction-dropdown', this.parentElement)">
        <span class="chapter-title"><%= test.description %></span>
        <div class="additional-text"><%= @lessons.count + 1 %> actividades</div>
      </button>
      <div class="introduction-dropdown">
        <ul class="dropdown-content" id="introduction-dropdown">

          <% @lessons.each do |lesson| %>
          <li>
            <form action="/home" method="post">
              <input type="hidden" name="lesson_number" value="<%= lesson.number %>">
              <button type="submit" class="card lesson-card">
                <div class="card-content">
                  <h2 class="card-title"><%= lesson.title %></h2>
                </div>
                <div class="card-divider"></div>
                <span class="number"><%= lesson.number %></span>
              </button>
            </form>
          </li>
          <% end %>

          <form action="/home" method="post">
            <input type="hidden" name="test_letter" value="<%= test.letter %>">
            <input type="hidden" name="question_number" value="<%= @questions.minimum(:number) %>">
            <button type="submit" class="card test-card">
              <div class="card-content">
                <h2 class="card-title">Test</h2>
              </div>
              <div class="card-divider"></div>
              <span class="number"><%= test.letter %></span>
            </button>
          </form>

        </ul>  
      </div>
    </div>
    <% end %>
  </div>

  <script>
    function toggleDropdown(className, buttonContainer) {
      var dropdowns = document.getElementsByClassName(className);
      
      for (var i = 0; i < dropdowns.length; i++) {
        var dropdown = dropdowns[i];

        if (dropdown.style.display === 'block') {
          dropdown.style.display = 'none';
          buttonContainer.style.marginBottom = '0';
        } else {
          dropdown.style.display = 'block';
          buttonContainer.style.marginBottom = dropdown.offsetHeight + 'px';
        }
      }
    };
  </script>
</body>
</html>